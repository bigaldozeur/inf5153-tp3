public class Session {
	private String utilisateur = "";
	private String motPasse;
	public String getUtilisateur(){
		return utilisateur;
	}
	public String getMotPasse(){
		return motPasse;
	}
	public void setUtilisateur(String u){
		utilisateur = u;
	}
	public void setMotPasse(char[] pwd){
		motPasse = pwd.toString();
	
		
	}
	public Session(){
		
	
	}
	
	
	public boolean authentifier() throws ClassNotFoundException, SQLException{
		return ControlleurDeBdSecurite.authentifier(utilisateur, motPasse);
	}

