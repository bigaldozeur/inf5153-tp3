package edu.uqam.inf5153.tp3.servicesTechniques.securite;

import java.io.IOException;
import java.security.NoSuchAlgorithmException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.time.LocalDateTime;

import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;

import edu.uqam.inf5153.tp3.fondation.CryptWithSalt;
import edu.uqam.inf5153.tp3.servicesTechniques.bd.Connexion;

public class ControlleurDeBdSecurite {
	private static Connection conn = null;
	private static boolean authificationEstValide = false;
	
	private static void seConnecter() throws ClassNotFoundException, SQLException{
		conn = Connexion.connecter();
	}

	public static boolean estAuthentifier(){
		return authificationEstValide;
	}
	public static boolean authentifier(String nom, String pwd) throws Exception{
		if( !Connexion.estConnecter() || conn == null ){
			seConnecter();
		}
		String sql = "select pwdhash from utilisateurs where nom=?";
		PreparedStatement pstmt = conn.prepareStatement(sql);
		pstmt.setString(1, nom);
		ResultSet rs = pstmt.executeQuery();
		
		
		String hash1 = "";
		//CryptWithSalt e = CryptWithSalt.getInstance();
		//hash1 = e.encode(pwd.toString());
		
		hash1 = CryptWithSalt.encrypt(pwd);
		
		String mpbd = rs.getString("pwdhash");		
		
		System.out.println(CryptWithSalt.decrypt(hash1));
		System.out.println(CryptWithSalt.decrypt(mpbd));
	 
        if(CryptWithSalt.decrypt(hash1).equals(CryptWithSalt.decrypt(mpbd))){
        	authificationEstValide = true;
        }else{
        	authificationEstValide = false;
        }
		
		
		rs.close();
		return authificationEstValide;
	}
	
	public static void creerUtilisateur(String nom,String pwd) throws Exception{
		
	    
	    if( !Connexion.estConnecter() || conn == null ){
			seConnecter();
		}
	    
	    
	    String pwdhash = "";
		//CryptWithSalt e = CryptWithSalt.getInstance();
		//pwdhash = e.encode(pwd.toString());
	    
	   // CryptWithSalt e = CryptWithSalt.getInstance();
		pwdhash = CryptWithSalt.encrypt(pwd);
	    
	    String sql = "insert into utilisateurs(nom, pwdhash) values (?,?)";
	    PreparedStatement pstmt = conn.prepareStatement(sql);
	    
	    pstmt.setString(1, nom);
	    pstmt.setString(2,pwdhash);
	   
	    
	    pstmt.executeUpdate();
	}
	public static boolean utilisateurExiste(String nom) throws ClassNotFoundException, SQLException{
		if( !Connexion.estConnecter() || conn == null ){
			seConnecter();
		}
		String sql = "select count(*) as cnt from utilisateurs where nom=?";
		PreparedStatement pstmt = conn.prepareStatement(sql);
		pstmt.setString(1, nom);
		ResultSet rs = pstmt.executeQuery();
		
		 int compteUtilisateur = rs.getInt("cnt");
		 	
		rs.close();
		return compteUtilisateur > 0;
		
	}
}
