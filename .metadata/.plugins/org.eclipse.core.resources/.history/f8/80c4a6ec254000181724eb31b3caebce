package edu.uqam.inf5153.tp3.domaine;

import java.io.IOException;
import java.security.NoSuchAlgorithmException;
import java.sql.SQLException;

import edu.uqam.inf5153.tp3.servicesTechniques.securite.ControlleurDeBdSecurite;

public class Utilisateur {
	private String nom;
	private String pwd;
	public Utilisateur(String nom, String pwd){
		this.nom = nom;
		this.pwd = pwd;
	}
	
	public void creerUtilisateur() throws ClassNotFoundException, NoSuchAlgorithmException, SQLException, IOException{
		ControlleurDeBdSecurite.creerUtilisateur(nom, pwd);
	}
}
